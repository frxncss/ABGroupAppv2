@inject DialogService DialogService

<RadzenTemplateForm TItem="Appointment" Data="@model">
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="Booking Reference:" Style="font-weight: bold;" /><RadzenLabel Text="@model.Text" Name="BookingRef" />
        </div>
        <div class="col-md-3">
            <RadzenLabel Text="Booking name:" Style="font-weight: bold;" /><RadzenLabel Text="Booking name" Name="BookingName" />
        </div>
        <div class="col-md-3">
            <RadzenLabel Text="Consultant:" Style="font-weight: bold;" /><RadzenLabel Text="John Doe" Name="ConsultantName" />
        </div>
        <div class="col-md-3">
            <RadzenLabel Text="Agent Country:" Style="font-weight: bold;" /><RadzenLabel Text="Germany" Name="AgentCountry" />
        </div>
    </div>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="List of Services" Style="font-weight: bold;" />
        </div>
        <div class="col">
        @*<RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Services </RadzenText> *@
        <RadzenTree Style="width: 100%; height: 100%">
            <RadzenTreeItem Text="Service 1">
                <ChildContent>
                    <RadzenTreeItem Text="Product Option Name"/>
                    <RadzenTreeItem Text="Pick up date (26/06/2024)" />
                    <RadzenTreeItem Text="Drop off date (29/06/2024)" />
                </ChildContent>
            </RadzenTreeItem>
            <RadzenTreeItem Text="Service 2">
                <ChildContent>
                    <RadzenTreeItem Text="Product Option Name" />
                    <RadzenTreeItem Text="Pick up date (30/06/2024)" />
                    <RadzenTreeItem Text="Drop off date (01/07/2024)" />
                </ChildContent>
            </RadzenTreeItem>
            <RadzenTreeItem Text="Service 3">
                <ChildContent>
                    <RadzenTreeItem Text="Product Option Name" />
                    <RadzenTreeItem Text="Pick up date (01/07/2024)" />
                    <RadzenTreeItem Text="Drop off date (04/07/2024)" />
                </ChildContent>
            </RadzenTreeItem>
        </RadzenTree>
        @*<RadzenRequiredValidator Text="Title is required" Component="Text" />*@
        </div>
    </div>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="Booking Start Date" Style="font-weight: bold;" />
        </div>
        <div class="col">
            <RadzenDatePicker @bind-Value="@model.Start" ReadOnly="true" Name="BookStart" ShowTime="true" />
            @*<RadzenRequiredValidator Text="Start is required" Component="Start" />*@
        </div>
    </div>
    <div class="row" style="margin-bottom: 80px">
        <div class="col-md-3">
            <RadzenLabel Text="Booking End Date" Style="font-weight: bold;" />
        </div>
        <div class="col">
            <RadzenDatePicker Name="BookEnd" @bind-Value="@model.End" ReadOnly="true" ShowTime="true" />
            @*<RadzenRequiredValidator Component="End" Text="End is required" />*@
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col">
            <RadzenButton ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium" Icon="cancel" Text="Close" Click="@Cancel" />
        </div>
    </div>
</RadzenTemplateForm>
@code {
    [Parameter]
    public Appointment Appointment { get; set; }

    Appointment model = new Appointment();

    protected override void OnParametersSet()
    {
        model = Appointment;
    }

    void OnSubmit(Appointment model)
    {
        DialogService.Close(model);
    }

    void Cancel()
    {
        DialogService.Close(model);
    }


}
